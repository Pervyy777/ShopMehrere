@model ShopMehrere.Models.User


<h2>Добавление пользователя</h2>
<form asp-action="CreateUser" asp-controller="home">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" />
    </p>
    <p>
        <label asp-for="Age">Возраст</label><br />
        <input type="number" asp-for="Age" />
        <span asp-validation-for="Age" />
    </p>
    <p>
        <label asp-for="CompanyId">Компания</label>
        <select asp-for="CompanyId">
            @foreach (var company in ViewBag.Companies)
            {
                    <option value="@company.Id">@company.Name</option>
            }
        </select>
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>